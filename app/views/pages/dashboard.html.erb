<div class="container mt-5">
  <div class="row">

    <div class="profile-nav col-md-3">
      <div class="panel bg-primary rounded shadow">
        <div class="text-center">
          <div class="p-3">
            <img class="rounded-circle p-3 me-4" src="https://kitt.lewagon.com/placeholder/users/andres-devlatorre" alt="" style="width: 190px;">
          </div>
          <div class="text-center">
            <h2 class="text-white pb-2"><%= current_user.email.split('@')[0].capitalize %></h2>
          </div>
        </div>
      </div>
    </div>

    <div class="profile-info col-md-9">
      <div class="row">
        <!-- Connect Section -->
        <div class="col-md-6 mb-3">
          <div class="panel border shadow rounded text-center">
            <div class="panel-body p-4">
              <h3>Connect</h3>
                <%= link_to "Talk", new_call_path, class: "btn btn-primary mx-2" %>
                <%= link_to "Listen", new_call_path, class: "btn btn-primary mx-2" %>
            </div>
          </div>
        </div>

        <!-- Livechat Section -->
        <div class="col-md-6 mb-3">
          <div class="panel border shadow rounded text-center">
            <div class="panel-body p-4">
              <h3>Livechat</h3>
              <%= link_to "Chat", livechats_path, class: "btn btn-primary mx-2" %>

            </div>
          </div>
        </div>

        <!-- Forum Section -->
        <div class="col-md-6 mb-3">
          <div class="panel border shadow rounded text-center">
            <div class="panel-body p-4">
              <h3>Forum</h3>
              <%= link_to "Forum", subforums_path, class: "btn btn-primary mx-2" %>
            </div>
          </div>
        </div>

        <!-- Journal Section -->
        <div class="col-md-6 mb-3">
          <div class="panel border shadow rounded text-center" style="margin-bottom: 150px;">
            <div class="panel-body p-4">
              <h3>Journal</h3>
              <%= link_to "Journal", journals_path, class: "btn btn-primary mx-2" %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
